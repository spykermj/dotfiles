{
    "codeLens.enable": true,
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": ["serve"],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {
                "experimentalFeatures": {
                    "prefillRequiredFields": true
                }
            },
            "settings": {}
        },
        "jsonnet": {
            "command": "jsonnet-language-server",
            "args": ["-t"],
            "rootPatterns": [".git/", "jsonnetfile.json"],
            "filetypes": ["jsonnet", "libsonnet"]
        }
    },
    "yaml.schemas": {
        "kubernetes": "/*.yaml"
    }
}
